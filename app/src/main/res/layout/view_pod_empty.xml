<?xml version="1.0" encoding="utf-8"?>
<com.example.waiyan.asartaline.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_vp_empty"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/no_information" />

    <org.mmtextview.components.MMTextView
        android:id="@+id/tv_vp_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_vp_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="No Internet Connection" />
</com.example.waiyan.asartaline.viewpods.EmptyViewPod>